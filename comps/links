<%doc> This is a -*- mason -*- template.
List links of a specific kind one by one.
</%doc>

<%args>
$section			# passed through 'action_show_page'
</%args>


% while (defined ($r = $sth->fetchrow_hashref)) {
<A HREF="<% $r->{url} %>"><% $r->{name} %></A><BR>
% }

<%once>
my ($sth, $r);
</%once>

<%init>
if (!defined $sth) {
	$sth = $dbh->prepare("SELECT name, url FROM links
				     WHERE type=?");
}

$sth->execute($section);
</%init>

<%cleanup>
$sth->finish;
</%cleanup>
