<%doc> This is a -*- mason -*- template.
Query and add a news entry.
</%doc>

<%args>
$id => undef			# if defined, modify news entry, otherwise create new
$article => undef		# if defined, modify news entry, otherwise create new
</%args>

<script language="javascript" type="text/javascript" src="include/tiny_mce/tiny_mce.js"></script>
<script language="javascript" type="text/javascript">
tinyMCE.init({
	theme_advanced_buttons1 :
		"formatselect,bold,italic,underline,strikethrough,forecolor,backcolor,|," +
		"justifyleft,justifycenter,justifyright, justifyfull,outdent,indent,|," +
                "bullist,numlist,link,unlink,hr,|," +
                "undo,redo,code,removeformat,cleanup",
	theme_advanced_buttons2 : "",
	theme_advanced_buttons3 : "",
	theme_advanced_toolbar_align : "left",
        theme_advanced_toolbar_location : "top",
	theme_advanced_path_location : "bottom",
	theme_advanced_resizing : "true",
	theme_advanced_resizing_use_cookie : "false",
        plugins : "advlink",
        language : "hu",
        entity_encoding : "raw",
	mode : "textareas"
});
</script>

<h3 class="topic">Hír <% $id ? "módosítása" : "felvétele" %></h3>

<& form, action => "action_" . ($id ? "modify" : "add") . "_news", hidden => { id => $id } &>
<P ALIGN=center>
<TEXTAREA NAME=article ROWS=15 COLS=80><% $article %></TEXTAREA>
<P ALIGN=center>
% if ($id) {
<INPUT TYPE=submit NAME=submit VALUE=" Módosít ">
<INPUT TYPE=submit NAME=abandon VALUE="Meghagy">
% } else {
<INPUT TYPE=submit NAME=submit VALUE="Felvesz">
<INPUT TYPE=submit NAME=abandon VALUE=" Eldob ">
% }
</FORM>

<%init>;
$article =~ s/"/&quot;/g;
</%init>
