<%once>
my ($sth, $i, $p, $row);
</%once>

<%init>
if (!defined $sth) {
	$sth = $dbh->prepare("SELECT id, name, script FROM scripts
				     ORDER BY name");
}

$sth->execute;
$row = 0;
</%init>

<%cleanup>
$sth->finish;
</%cleanup>
