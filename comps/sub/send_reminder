<%doc> This is a -*- mason -*- template.
Send a reminder to the user
</%doc>

<%args>
$email
$password
</%args>

<%once>;
use Email::Stuffer;

my $body;
</%once>

<%init>;
$body = <<END;
Jelszavad a(z) $ENV{SITENAME} oldalhoz: $password
Belépés után megváltoztathatod.
END

Email::Stuffer
    ->from($ENV{CONTACT})
    ->to($email)
    ->subject('ETS jelszó')
    ->text_body($body)
    ->send_or_die;
</%init>
